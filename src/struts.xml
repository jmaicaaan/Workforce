<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />

	<package name="default" extends="struts-default, json-default">

		<interceptors>
			<interceptor-stack name="myStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="json" />
			</interceptor-stack>
		</interceptors>

		<action name="login" class="com.workforce.actions.Login">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="includeProperties">
					user\.accessToken,
					user\.accountTypeModel\.type
				</param>
			</result>
			
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
		<action name="getUserAccountType" class="com.workforce.actions.GetUserAccountType">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="includeProperties">
					user\.accessToken,
					user\.accountTypeModel\.type
				</param>
			</result>
			
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
		<action name="getProgrammingLanguages" class="com.workforce.actions.GetProgrammingLanguages">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="excludeProperties">
					programmingLanguageList\[\d+\].ID,
					programmingLanguageList\[\d+\].companyModel,
					programmingLanguageList\[\d+\].participantModel
				</param>
			</result>
			
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
		<action name="sendEmail" class="com.workforce.actions.SendEmail">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
			</result>
			
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
		<action name="getNotification" class="com.workforce.actions.GetNotification">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="excludeProperties">
					list\[\d+\].notificationID,
					list\[\d+\].user,
					list\[\d+\].user\.ID,
					list\[\d+\].user\.password,
					list\[\d+\].user\.timestamp,
					list\[\d+\].user\.accountTypeModel\.ID,
					list\[\d+\].user\.accountTypeModel\.userModel,
					list\[\d+\].user\.hasAccessToken,
					list\[\d+\].user\.hasTemporaryPassword,
					list\[\d+\].user\.notificationModel,
					list\[\d+\].user\.participantModel\.ID,
					list\[\d+\].user\.participantModel\.userModel,
					list\[\d+\].user\.participantModel\.companyModel,
					list\[\d+\].user\.participantModel\.participantModel,
					list\[\d+\].user\.participantModel\.workforceModel,
					list\[\d+\].user\.participantModel\.programmingLanguageModel\.ID,
					list\[\d+\].user\.participantModel\.programmingLanguageModel\.companyModel,
					list\[\d+\].user\.participantModel\.programmingLanguageModel\.participantModel,
					list\[\d+\].user\.companyModel\.ID,
					list\[\d+\].user\.companyModel\.userModel,
					list\[\d+\].user\.companyModel\.workforceModel,
					list\[\d+\].user\.companyModel\.programmingLanguageModel\.ID,
					list\[\d+\].user\.companyModel\.programmingLanguageModel\.companyModel,
					list\[\d+\].user\.companyModel\.programmingLanguageModel\.participantModel,
				</param>
			</result>
			
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
		<action name="logout" class="com.workforce.actions.Logout">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
			</result>
			
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
	</package>
	
	<include file="struts_participant.xml"></include>
	<include file="struts_company.xml"></include>
</struts>
