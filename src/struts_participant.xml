<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	
	<package name="participant" extends="struts-default, json-default">

		<interceptors>
			<interceptor-stack name="myStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="json" />
			</interceptor-stack>
		</interceptors>


		<action name="registerParticipant" class="com.workforce.actions.RegisterParticipant">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
			</result>
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
		<action name="getParticipantDetails" class="com.workforce.actions.GetParticipantDetails">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
				<param name="excludeProperties">
					user\.ID,
					user\.hasAccessToken,
					user\.hasTemporaryPassword,
					user\.notificationModel,
					user\.password,
					user\.accountTypeModel\.ID,
					user\.accountTypeModel\.userModel,
					user\.participantModel\.ID,
					user\.participantModel\.userModel,
					user\.participantModel\.workforceModel,
					user\.participantModel\.programmingLanguageModel\.ID,
					user\.participantModel\.programmingLanguageModel\.companyModel,
					user\.participantModel\.programmingLanguageModel\.participantModel
				</param>
			</result>
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
		<action name="updateParticipantProfile" class="com.workforce.actions.UpdateParticipantProfile">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
<!-- 				<param name="excludeProperties">
					user\.password,
					user\.accountTypeModel\.userModel,
					user\.participantModel\.userModel,
					user\.participantModel\.programmingLanguageModel\.companyModel,
					user\.participantModel\.programmingLanguageModel\.participantModel
				</param> -->
			</result>
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
		<action name="updateParticipantPassword" class="com.workforce.actions.UpdateParticipantPassword">
			<interceptor-ref name="myStack" />
			<result name="success" type="json">
				<param name="excludeNullProperties">true</param>
<!-- 				<param name="excludeProperties">
					user\.password,
					user\.accountTypeModel\.userModel,
					user\.participantModel\.userModel,
					user\.participantModel\.programmingLanguageModel\.companyModel,
					user\.participantModel\.programmingLanguageModel\.participantModel
				</param> -->
			</result>
			<result name="input" type="json">
				<param name="statusCode">500</param>
				<param name="errorCode">500</param>
			</result>
		</action>
		
	</package>
</struts>
   